package OperasiMatematika;

public class Penggunaan {
    public static void main(String[] args) {
        int a = 8;
        int b = 2;

        //Contoh Penggunaan Operasi Matematika
        System.out.println("Contoh Penggunaan Operasi Matematika");

        int perhitungan = a * a - (a + b)/2;
        /** Bentuk Matematika
         * perhitungan = 8 x 8 - (8 + 2) / 2
         * perhitungan = 64 - 10 / 2
         * perhitungan = 64 - 5
         * perhitungan = 59
         */
        System.out.println("Hasil dari variabel Perhitungan = " + perhitungan);
    }
}
